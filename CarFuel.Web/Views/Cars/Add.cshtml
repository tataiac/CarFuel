@using CarFuel.Models
@model Car

<h2>Add</h2>

<form class="form-horizontal" action="~/Cars/Add" method="post">
  <fieldset>

    <!-- Form Name -->
    <legend>Add Car</legend>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Car Name</label>
      <div class="col-md-5">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-md" })
        <span class="help-block">Your car's name.</span>
      </div>
    </div>

    <!-- Button -->
    <div class="form-group">
      <label class="col-md-4 control-label" for=""></label>
      <div class="col-md-4">
        <button id="singlebutton" name="singlebutton" class="btn btn-primary">Add</button>
      </div>
    </div>

  </fieldset>
</form>
